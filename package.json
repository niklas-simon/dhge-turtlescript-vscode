{
  "name": "turtlescript",
  "displayName": "turtlescript",
  "description": "Syntax Highlighting for Turtlescript by Klaus Kusche",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers"
  ],
  "activationEvents": [
    "onDebug",
    "onLanguage:turtlescript",
    "workspaceContains:{**/*.t,**/*.tts,**/*.turtle}"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Turtlescript",
      "properties": {
        "turtlescript.debuggerPath": {
          "type": "string",
          "default": "turtle",
          "description": "Path to debugger executeable"
        }
      }
    },
    "languages": [
      {
        "id": "turtlescript",
        "extensions": [
          ".t",
          ".turtle",
          ".tts"
        ]
      }
    ],
    "grammars": [
      {
        "language": "turtlescript",
        "scopeName": "source.turtlescript",
        "path": "./syntaxes/turtlescript.tmLanguage.json"
      }
    ],
    "breakpoints": [
      {
        "language": "turtlescript"
      }
    ],
    "debuggers": [
      {
        "type": "interpreter",
        "label": "Interpreter Debug Mode",
        "_program": "${configuration:turtlescript.debuggerPath}",
        "program": "tee -a /mnt/c/Users/nikla/Desktop/projects/dhge-compilerbau/turtle/vscode",
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a turtlescript file.",
                "default": "${file}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "interpreter",
            "request": "launch",
            "name": "Ask for file name",
            "program": "${file}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "Turtlescript Debug: Launch",
            "description": "A new configuration for launching a turtlescript debug program",
            "body": {
              "type": "interpreter",
              "request": "launch",
              "name": "${2:Launch Program}",
              "program": "^\"\\${file}\""
            }
          }
        ],
        "variables": {
          "AskForProgramName": "extension.turtlescript.getProgramName"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}
